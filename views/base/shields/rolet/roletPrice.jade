extends ../../layout

block content
  .main-nav
    .nav-link
      a(href="/")= i18n.__('Dashboard') 
      a(href="/base/shields/rolet/rolet")='Rolet'
      a(href="/base/shields/rolet/Guides")='Guides'
      a(href="/base/shields/rolet/endLists")='End Lists'
      a(href="/base/shields/rolet/lamels")='Lamels'
      span#nav-text
        =' RoletPrice '
      img.loader-ico(src="/assets/images/loader_ico.GIF")
  .main-content    
    .titel-page 
      ='RoletPrice :'  
    .price-table 
      .lamels-box 
        .header-box
        each lamel in lamels
          .lamel-row(data-id=lamel.id)
            span 
              =lamel.name
      .groups-box 
        each group in groups
          .group-wrap 
            .group-box-name
              span 
                =group.group.name
            .boxes-box
              each box in group.boxes
                .box-box(data-box-id=box.id) 
                  .box-name 
                    =box.name
                  each lam in lamels 
                    .price-field(data-lamel-id=lam.id data-box-id=box.id)
                      input.input-default.rolet-price-input(type="number" data-lamel-id=lam.id data-box-id=box.id value="" name="")         
                      
    