extends ../../layout

block content
  .main-nav
    .nav-link
      a(href="/")= i18n.__('Dashboard') 
      a(href="/base/shields/rolet/rolet")='Boxes'
      a(href="/base/shields/rolet/guides")='Guides'
      span#nav-text
        ='End Lists'
      a(href="/base/shields/rolet/lamels")='Lamels'
      a(href="/base/shields/rolet/roletColorsGroups")='Colors'
      a(href="/base/shields/rolet/roletPrice")='RoletPrice'
      a(href="/base/shields/rolet/roletBoxHeight")='RoletBoxHeight'
      a(href="/base/shields/rolet/controls")='Controls'
      a(href="/base/shields/rolet/controlBoxSizes")='ControlBoxSizes'
      img.loader-ico(src="/assets/images/loader_ico.GIF")
  .main-content    
    .titel-page 
      ='End lists :'  
    .block-systems.block-end-lists
      if (endLists && endLists.length > 0)
        each list in endLists
          .rolet-system-item
            .system-img
              img(src=(list.img ? list.img : '/local_storage/default.png'), alt="")
            .system-name
              =list.name
            .btns-block-item
              .btn-active-system.btn-active(data-end_list=list.id class=!list.is_activ ? 'btn-unactive' : 'btn-active') 
              .btn-edit-system.btn-system(data-end_list=list.id)
              .btn-delete-system.btn-system(data-end_list=list.id)
      .rolet-system-item.btn-add-system
        div
          ='+'
        .btn-add-text 
          ='Добавить'
  include popups/add-new-end-list.jade
  include popups/edit-end-list.jade
  include popups/delete-end-list.jade
  