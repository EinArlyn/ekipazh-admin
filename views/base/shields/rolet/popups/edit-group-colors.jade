.pop-up.pop-up-rolet#popup-edit-color-group-rolet
  form#edit-color-group-rolet-form(method="POST" action="/base/shields/rolet/roletColorsGroups/color/editGroup" enctype="multipart/form-data")
    input(type="hidden" name="group_id" value='' required)
    .pop-up-close-wrap
      a(class="pop-up-close", href="#")
    span.pop-up-header
      =i18n.__('Edit')
    .pop-up-rolet-rows 
      .row-name.rolet-row 
        .title-name.title
          =i18n.__('Group name')
          | :
        input.input-default.text-name(type="text" value="" name="name" required)
      .row-position.rolet-row 
        .title-position.title
          =i18n.__('Position')
          | :
        input.input-default.text-position(type="number" value="" name="position" required)
      .row-position.rolet-row 
        .title-colors.title
          =i18n.__('Color')
          | :
        .radio-colors-block
    .row.block-center.text-center
      input.btn-submit(type="submit" value=i18n.__('Save'))
