.pop-up.pop-up-rolet#popup-add-end-list-rolet
  form#add-end-list-rolet-form(method="POST" action="/base/shields/rolet/endLists/endList/add" enctype="multipart/form-data")
    //- input(type="hidden" name="group_id" value='' required)
    .pop-up-close-wrap
      a(class="pop-up-close", href="#")
    span.pop-up-header
      ='Add new end list'
    .row
      .col-md-6
        img.rolet-image(src="/local_storage/default.png")
      .col-md-6
        input.hidden.rolet-image-file(type="file" name="rolet_img")
        input.add-image-btn(type="button" value=i18n.__('Add'))
    .pop-up-rolet-rows 
      .row-name.rolet-row 
        .title-name.title
          =i18n.__('Name')
          | :
        input.input-default.text-name(type="text" value="" name="name" required)
      .row-end-list-price.rolet-row 
        .title-end-list-price.title
          =i18n.__('Price')
          | :
        input.input-default.text-end-list-price(type="number" value="" name="price" step="0.1")
      .row-is-settings.rolet-row
        .title-is-lamination.title
          ='Is color'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_color" value="1")
          span.checkbox-custom
      .row-is-settings.rolet-row
        .title-is-key.title
          ='Is key'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_key" value="1")
          span.checkbox-custom
          
    .row-description
      .title-description
        =i18n.__('Description')
        | :
      textarea.input-default.text-description(name="description")  
    .row.block-center.text-center
      input.btn-submit(type="submit" value=i18n.__('Add'))
