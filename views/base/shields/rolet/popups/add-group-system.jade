.pop-up.pop-up-rolet#popup-add-group-rolet
  form#add-group-rolet-form(method="POST" action="/base/shields/rolet/rolet" enctype="multipart/form-data")
    //- input(type="hidden" name="type_id" value=colorTypeId required)
    .pop-up-close-wrap
      a(class="pop-up-close", href="#")
    span.pop-up-header
      =i18n.__('Add new group')
    .row
      .col-md-6
        img.rolet-image(src="/local_storage/default.png")
      .col-md-6
        input.hidden.rolet-image-file(type="file" name="rolet_img")
        input.add-image-btn(type="button" value=i18n.__('Add'))
    .pop-up-rolet-rows 
      .row-name.rolet-row 
        .title-name.title
          =i18n.__('Group name')
          | :
        input.input-default.text-name(type="text" value="" name="name" required)
      .row-position.rolet-row 
        .title-position.title
          =i18n.__('Position')
          | :
        input.input-default.text-position(type="number" value="" name="position" required)
      .row-currency.rolet-row 
        .title-currency.title
          =i18n.__('Currency')
          | :
        select.select-default.input-margin#rolet-currency(name="currency_id" style="width: 230px;")
      .row-for-type.rolet-row 
        .title-for-type.title
          =i18n.__('Type')
          | :
        .for-type-checkboses
    .row-description
      .title-description
        =i18n.__('Description')
        | :
      textarea.input-default.text-description(name="description")
    .row-countries 
      each country in countries
        .country-item
          input(type="checkbox" id="country-checkbox" + country.id data-country-id=country.id name="checkGroup" value='')
          label(for="country-checkbox" + country.id) 
            =country.name
    .row.block-center.text-center
      input.btn-submit(type="submit" value=i18n.__('Add'))
