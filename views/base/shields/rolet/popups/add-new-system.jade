.pop-up.pop-up-rolet#popup-add-system-rolet
  form#add-system-rolet-form(method="POST" action="/base/shields/rolet/rolet/system/add" enctype="multipart/form-data")
    input(type="hidden" name="group_id" value='' required)
    .pop-up-close-wrap
      a(class="pop-up-close", href="#")
    span.pop-up-header
      ='Add new system'
    .row
      .col-md-6
        img.rolet-image(src="/local_storage/default.png")
      .col-md-6
        input.hidden.rolet-image-file(type="file" name="rolet_img")
        input.add-image-btn(type="button" value=i18n.__('Add'))
    .pop-up-rolet-rows 
      .row-name.rolet-row 
        .title-name.title
          =i18n.__('Name')
          | :
        input.input-default.text-name(type="text" value="" name="name" required)
      .row-position.rolet-row 
        .title-position.title
          =i18n.__('Position')
          | :
        input.input-default.text-position(type="number" value="" name="position" required)
      .row-is-settings.rolet-row
        .title-is-lamination.title
          ='Is color'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_color" value="1")
          span.checkbox-custom
      .row-is-settings.rolet-row
        .title-is-revision.title
          ='Is revision'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_revision" value="1")
          span.checkbox-custom
      .row-is-settings.rolet-row
        .title-is-grid.title
          ='Is grid'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_grid" value="1")
          span.checkbox-custom
      .row-is-settings.rolet-row
        .title-is-split.title
          ='Is split'
          | :
        label.is-split-label
          span
            ='Частей: '
          input.input-default.is-split-rolet-popup(type="number" name="is_split" value="1" min="0" max="4")
        label.is-split-price-label
          span
            ='Стоимость деления: '
          input.input-default.split-price-rolet-popup(type="number" name="split_price" value="1" step="0.1")
      .row-is-settings.rolet-row
        .title-is-defense.title
          ='Is security'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_security" value="1")
          span.checkbox-custom
      .row-is-settings.rolet-row
        .title-is-engine.title
          ='Is engine'
          | :
        label.checkbox-label
          input.input-default.checkbox-rolet-popup(type="checkbox" name="is_engine" value="1")
          span.checkbox-custom
      .row-is-settings.rolet-row
        .title-min-size.title
          ='Min Sizes'
          | :
        label.min-width-label
          span
            ='Min width: '
          input.input-default.min-width-rolet-popup(type="number" name="min_width" value="1" min="0" step="0.1")
        label.min-square-price-label
          span
            ='Min. м² for price: '
          input.input-default.min-square-price-rolet-popup(type="number" name="min_square_price" value="1" step="0.1")
      .row-height-width.rolet-row
        .title-height-width
          ='Размеры бокса мм :'
        .title-height-width-wrap
          .height-box-title
            ='Height'
            | :
          .width-box-title
            ='Width'
            | :
        .height-width-box
          .field-height-width
            input.input-default.height-box(type="number" value="" name="height_1" step="0.1")
            input.input-default.width-box(type="number" value="" name="width_1" step="0.1")
          .field-height-width
            input.input-default.height-box(type="number" value="" name="height_2" step="0.1")
            input.input-default.width-box(type="number" value="" name="width_2" step="0.1")
          .field-height-width
            input.input-default.height-box(type="number" value="" name="height_3" step="0.1")
            input.input-default.width-box(type="number" value="" name="width_3" step="0.1")
          .field-height-width
            input.input-default.height-box(type="number" value="" name="height_4" step="0.1")
            input.input-default.width-box(type="number" value="" name="width_4" step="0.1")
          .field-height-width
            input.input-default.height-box(type="number" value="" name="height_5" step="0.1")
            input.input-default.width-box(type="number" value="" name="width_5" step="0.1")
          .field-height-width
            input.input-default.height-box(type="number" value="" name="height_6" step="0.1")
            input.input-default.width-box(type="number" value="" name="width_6" step="0.1")
    .row-description
      .title-description
        =i18n.__('Description')
        | :
      textarea.input-default.text-description(name="description")  
    .row.block-center.text-center
      input.btn-submit(type="submit" value=i18n.__('Add'))
