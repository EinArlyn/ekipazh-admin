.pop-up.pop-up-rolet#popup-edit-color-rolet
  form#edit-color-rolet-form(method="POST" action="/base/shields/rolet/roletColorsGroups/color/editColor" enctype="multipart/form-data")
    input(type="hidden" name="color_id" value='' required)
    .pop-up-close-wrap
      a(class="pop-up-close", href="#")
    span.pop-up-header
      ='Edit color'
    .row
      .col-md-6
        img.rolet-image(src="/local_storage/default.png")
      .col-md-6
        input.hidden.rolet-image-file(type="file" name="rolet_img")
        input.add-image-btn(type="button" value=i18n.__('Add'))
    .pop-up-rolet-rows 
      .row-name.rolet-row 
        .title-name.title
          =i18n.__('Name')
          | :
        input.input-default.text-name(type="text" value="" name="name" required)
      .row-position.rolet-row 
        .title-position.title
          =i18n.__('Position')
          | :
        input.input-default.text-position(type="number" value="" name="position" required)
    .row.block-center.text-center
      input.btn-submit(type="submit" value=i18n.__('Save'))
