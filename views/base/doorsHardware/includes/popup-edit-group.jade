.pop-up.popup-edit-group
  form#form-edit-group(method="post" action="/base/doors/hardware/group/edit" enctype="multipart/form-data")
    input(type="hidden" name="hardware_group_id" value="")
    .pop-up-close-wrap
      a.pop-up-close(href="#")
    span.pop-up-header
      =i18n.__('Edit group')
    .row
      .col-md-4
        input#is-active-group(type="checkbox" name="is_active" value="1")
        label(for="is-active-group")
          =i18n.__('Active')
      .col-md-8
        .row
          .col-md-7.text-right.text-height-20
            =i18n.__('Sync code')
            | :
          .col-md-5
            input.input-default.width-90(type="text" name="code_sync" value="" disabled)
    hr.smooth
    .row
      .col-md-12
        =i18n.__('Usable as a Push message')
        | : 
        input(id="checkbox-hardware-push", type="checkbox", name="is_push" value="1")
        label(for="checkbox-hardware-push")
          span#hide
            =null
    .row
      .col-md-4.text-right.text-height-20
        =i18n.__('Type')
        | :
      .col-md-8
        select.select-default.width-90(name="type" required)
          option(value="1")=i18n.__("Single with latch")
          option(value="2")=i18n.__("Single with roller")
          option(value="3")=i18n.__("Multiple with latch")
          option(value="4")=i18n.__("Multiple with roller")
    .row
      .col-md-4.text-right.text-height-20
        =i18n.__('Name')
        | :
      .col-md-8
        input.input-default.width-90(type="text" name="name" value="" required)
    .row
      .col-md-4.text-right.text-height-20
        =i18n.__('Producer')
        | :
      .col-md-8
        input.input-default.width-90(type="text" name="producer" value="" required)
    .row
      .col-md-4.text-right.text-height-20
        =i18n.__('Country')
        | :
      .col-md-8
        input.input-default.width-90(type="text" name="country" value="" required)
    .row
      .col-md-4.text-right.text-height-20
        =i18n.__('Link')
        | :
      .col-md-8
        input.input-default.width-90(type="text" name="link" value="")
    .row
      .col-md-4.text-right.text-height-20
        =i18n.__('Description')
        | :
      .col-md-8
        textarea.input-default(name="description" type="text")
    .row
      .col-md-6
        span.text-height-20
          =i18n.__('Anticorrosion')
          | :
        span
          select.select-min.select-default(name="anticorrosion_coeff" type="text")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
      .col-md-6
        span.text-height-20
          =i18n.__('Burglar')
          | :
        span
          select.select-min.select-default(name="burglar_coeff", type="text")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
    hr
    .row
      .row.text-center.row-fold-params
        =i18n.__('Widths/Heights diapason per fold')
        | :
      .row.row-fold-values
        .col-md-6
          .row.text-center.text-height-20
            =i18n.__('Width (mm)')
            | :
          .row
            | min
            | 
            input.input-default(type="text" name="width_min" value="")
            | 
            | max
            | 
            input.input-default(type="text" name="width_max" value="")
        .col-md-6
          .row.text-center.text-height-20
            =i18n.__('Height (mm)')
            | :
          .row
            | min
            | 
            input.input-default(type="text" name="height_min" value="")
            | 
            | max
            | 
            input.input-default(type="text" name="height_max" value="")
    .row
      .col-md-6
        input.add-image-btn.edit-hardware-group-image(type="button")
        input.hidden(type="file" name="group_image")
      .col-md-6
        img.image-preview(src="/local_storage/default.png")
    br
    .row
      .col-md-4
      .col-md-4
        input.pop-up-submit-btn.block-center(type="submit" value=i18n.__('Save'))
      .col-md-4
