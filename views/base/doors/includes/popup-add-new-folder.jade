.pop-up.popup-add-new-folder
  form#form-new-folder(method="post" action="/base/doors/folder/add" enctype="multipart/form-data")
    .pop-up-close-wrap
      a.pop-up-close(href="#")
    span.pop-up-header
      =i18n.__('Add new folder')
    .row
      .col-md-2.text-right
        =i18n.__('Name')
        | :
      .col-md-10
        input.input-default.width-90(type="text" name="name" value="" required)
    .row
      .col-md-4
      .col-md-4
        input.pop-up-submit-btn.block-center(type="submit" value=i18n.__('Add'))
      .col-md-4
          
