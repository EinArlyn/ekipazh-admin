.pop-up.popup-edit-group
  form#form-edit-group(method="post" action="/base/doors/group/edit" enctype="multipart/form-data")
    input(type="hidden" name="group_id" value="")
    .pop-up-close-wrap
      a.pop-up-close(href="#")
    span.pop-up-header
      =i18n.__('Edit group')
    .row
      .col-md-2.text-right
        =i18n.__('Folder')
        | :
      .col-md-10
        select.select-default.width-90(name="folder_id")
          option(value=defaultFolderId)=i18n.__("Not exist")
            each doorFolder in doorFolders
              if doorFolder.type !== 0
                option(value=doorFolder.id)=doorFolder.name
    .row
      .col-md-2.text-right
        =i18n.__('Name')
        | :
      .col-md-10
        input.input-default.width-90(type="text" name="name" value="" required)
    .row
      .col-md-2.text-right
        =i18n.__('Description')
        | :
      .col-md-10
        textarea.input-default.input-margin#doors-group-description-input(name="description" style="width: 220px; height: 50px; resize: none;")
    .row
      input#select-doors-group-edit-system-image(type="file" name="doors_group_img" class="hidden")
      a#edit-doors-group-system-img(href="#" type="button" style="")
      img#doors-group-edit-system-image(style="height: 64px; width: 124px; margin-left: 20px;" src="")
    .row
      .col-md-4
      .col-md-4
        input.pop-up-submit-btn.block-center(type="submit" value=i18n.__('Save'))
      .col-md-4
          
