.pop-up.add-group-pop-up
  form#add-profile-group-form(method="POST" action="/base/profiles/addProfileGroup" enctype="multipart/form-data")
    .pop-up-close-wrap
      a.pop-up-close(value=".add-group-pop-up" href="#")
    span.pop-up-header
      =i18n.__('Add profile group')
    .profile-edit-group-block-align
      span.profile-edit-group-text-align
        =i18n.__('Group name')
        | /
        =i18n.__('Position')
        | :
      input.input-default.profile-edit-group-input-align(id="profile-group-position-input" type="text" name="position" value="0" style="width: 22px;")
      input.input-default.profile-edit-group-input-align(id="profile-group-name-input" type="text" name="name" style="width: 200px;")
    .profile-edit-group-block-align
      span.profile-edit-group-text-align
        =i18n.__('Link')
        | :
      input.input-default.profile-edit-group-input-align(id="profile-group-link-input" type="text" name="link" style="width: 230px;")
    .profile-edit-group-description-block-align
      span.profile-edit-group-text-align
        =i18n.__('Description')
        | :
      textarea.input-default.profile-edit-group-input-align(id="profile-group-description-input" type="text" name="description" style="min-width: 230px; min-height: 100px;max-width: 230px; max-height: 100px;") 
    .profile-edit-group-image-block-align
      input(id="select-profile-group-image" type="file" name="group_img" class="hidden")
      a(href="#" type="button" id="profile-group-img" style="margin-left: 30px;")
      img(id="profile-group-image" style="height: 64px; width: 124px; margin-left: 20px;" src="/local_storage/default.png")
    .pop-up-submit
      a.pop-up-submit-btn(id="group-add-pop-up-btn", href="#", type="button" value="")
        span.pop-up-submit-btn-text
          =i18n.__('Add')