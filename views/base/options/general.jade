extends ../layout

block content
  .main-nav
    .nav-link
      a(class="external-link", href="/")= i18n.__('Dashboard') 
      | 
      | -> 
      span#nav-text
        =i18n.__('Options')
      img.loader-ico(src="/assets/images/loader_ico.GIF")
  .main-select-option
    select(id="lamination-select", name="", class="select-default selected-option", style="width: 180px;")
      option(value="1")=i18n.__('Lamination')
      option(value="1")=i18n.__('Lamination')
      option(value="2")=i18n.__('Discounts')
      option(value="3")=i18n.__('Coefficients')
      option(value="8")=i18n.__('Suppliers')
      option(value="9")=i18n.__('Currency')
      option(value="10" selected)=i18n.__('General options')
      option(value="11")=i18n.__('Application options')
      option(disabled)=i18n.__('Groups')
      option(value="4")=i18n.__('Glazed window')
      option(value="5")=i18n.__('Window sills')
      option(value="6")=i18n.__('Spillways')
      option(value="7")=i18n.__('Visors')
      option(value="12")=i18n.__('Connectors')
      option(value="13")=i18n.__('Mosquitos')
      option(value="14")=i18n.__('Doorhandles')
      option(value="15")=i18n.__('Decors')
                //-form(method='post', action='/base/option/save', id="main-form")
    .general-option.checked-option
      .main-content
        .option-container
          .left-cell
            =i18n.__('Application access link')
            | : 
          .right-cell
            input.input-default(type="text" value="http://windowscalculator.net/calculator/#/?access=" + factory.app_token style="width: 500px;" disabled)
        hr.divider
        .row
          .col-md-6.right-divider
            .label
              =i18n.__('Email for orders')
              | : 
            .email-container
              table#email-table
                tbody
                  each emailRow in factory.factory_emails
                    tr
                      td
                        input.input-default.email-input(type="text" data-row=emailRow.id value=emailRow.email placeholder=i18n.__('Type email address'))
                        input.ok-button.submit-factory-email(type="button" data-row=emailRow.id value=i18n.__('Ok'))
                tfoot
                  tr
                    td
                      input#add-email(type="button" value=i18n.__('Add +'))
          .col-md-6
            .row
              =i18n.__('Order folders')
              | :
            .folders-container
              table#folders-table
                tbody
                  each folder in factoryOrderFolders
                    tr
                      td
                        input.input-default.folder-input(type="text" data-row=folder.id value=folder.name placeholder=i18n.__('Type folder name'))
                        input.ok-button.submit-factory-folder(type="button" data-row=folder.id value=i18n.__('Ok'))
                tfoot
                  tr
                    td
                      input#add-folder(type="button" value=i18n.__('Add +'))
        hr.divider
        .row
          .col-md-6.right-divider
            form(method="POST", action="/base/options/general/identificators")
              .row
                .row
                  =i18n.__('User identificators')
                  | : 
                .col-md-6
                  .row
                    .col-md-2.pull-center
                      div.identificator-round.r-1
                      span.pull-right
                        | -
                    .col-md-10
                      input.identificator-input.input-default(type="text" name="identificator_1" value=factoryIdentificators.identificator_1)
                  .row
                    .col-md-2.pull-center
                      div.identificator-round.r-2
                      span.pull-right
                        | -
                    .col-md-10
                      input.identificator-input.input-default(type="text" name="identificator_2" value=factoryIdentificators.identificator_2)
                  .row
                    .col-md-2.pull-center
                      div.identificator-round.r-3
                      span.pull-right
                        | -
                    .col-md-10
                      input.identificator-input.input-default(type="text" name="identificator_3" value=factoryIdentificators.identificator_3)
                  .row
                    .col-md-2.pull-center
                      div.identificator-round.r-4
                      span.pull-right
                        | -
                    .col-md-10
                      input.identificator-input.input-default(type="text" name="identificator_4" value=factoryIdentificators.identificator_4)
                  .row
