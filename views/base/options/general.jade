                      input.identificator-input.input-default(type="text" name="identificator_12" value=factoryIdentificators.identificator_12)
                  .row
                    .col-md-2.pull-center
                      div.identificator-round.r-13
                      span.pull-right
                        | -
                    .col-md-10
                      input.identificator-input.input-default(type="text" name="identificator_13" value=factoryIdentificators.identificator_13)
              .row.pull-center
                input.add-btn#submit-identificators(type="submit" disabled value=i18n.__('Save'))
          .col-md-6
            .row
              .label
                =i18n.__('Coefficient type')
                | : 
              .option-container
                input.option-input(type="radio", data-type="therm_coeff_id" name="coeff" value="1" id="select-r" checked=(factory.therm_coeff_id ? factory.therm_coeff_id : undefined))
                label(for="select-r")
                  =i18n.__('R_coeff')
                input.option-input(type="radio", data-type="therm_coeff_id" name="coeff" value="0" id="select-u" checked=(factory.therm_coeff_id ? undefined : factory.therm_coeff_id))
                label(for="select-u")
                  =i18n.__('U_coeff')
              .row
                .col-md-7.text-right
                  span
                    =i18n.__('Max constructions square')
                    | :               
                .col-md-3
                  input.option-input.input-min.input-default(type="text", data-type="max_construct_square" name="constuct_area" value=factory.max_construct_square)
                  | 
                  =i18n.__('m')
                  | &#178;
              .row
                .col-md-7.text-right
                  span
                    =i18n.__('Max constructions size')
                    | :
                .col-md-3
                  input.option-input.input-min.input-default(type="text", data-type="max_construct_size" name="constuct_size" value=factory.max_construct_size)
                  | 
                  =i18n.__('mm')
              .row
