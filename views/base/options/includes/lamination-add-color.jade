.pop-up.add-color-pop-up
    form#add-lamination-color-form(method="POST" action="/base/options/addLaminationColor" enctype="multipart/form-data")
        .pop-up-close-wrap
            a.pop-up-close(href="#")

        br

        .wrapp2
            label(for="lamination-color-name-input") 
                =i18n.__('Name')
            input.input-default.profile-edit-group-input-align#lamination-group-name-input(type="text" name="name" style="width: 200px;")

        br

        .content-block-image
            input.hidden(id="select-lamination-group-image" type="file" name="folder_img")
            a.group-img(href="#" type="button" id="lamination-group-img" style="margin-left: 10px;")
            img.group-image(id="lamination-group-image" style="height: 64px; width: 124px; margin-left: 20px;" src="/local_storage/default.png")

        .wrapp-btn
            button(type="submit") 
                =i18n.__('Add +') 
