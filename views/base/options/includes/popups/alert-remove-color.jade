.pop-up.alert-remove-color.delete-alert
  .pop-up-close-wrap
    a(class="pop-up-close", href="#")
  span.pop-up-header
    =i18n.__('Removing groups')
  .row
    .col-md-12.text-center
      =i18n.__('Are you sure?')
  .row
    .col-md-6.text-center
      input.pop-up-submit-btn(type="button" value=i18n.__('Remove'))
    .col-md-6.text-center
      input.pop-up-deny-btn(type="button" value=i18n.__('Cancel'))
