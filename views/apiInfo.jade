            | ?login=
            b login
            | &access_token=
            b access_token
            pre
              |    login:           {
              b string
              | }      - user phone
              |    access_token:    {
              b string
              | }      - user device_code
        tr
          td.primary
            | body:
          td.secondary
            | -
        tr
          td.primary
            | response:
          td.secondary
            pre
              | {
              |   status: 
              b true
              | ,
              |   tables: 
              |     {
              |       cities: 
              |         {
              |           fields:    {
              b array of strings
              | }     - array with fields of current table,
              |           rows:      {
              b array of strings
