            button.emit-btn(id="emit-register" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b POST
        tr
          td.primary
            | query:
          td.secondary
            | -
        tr
          td.primary
            | body:
          td.secondary
            pre
              | {
              |   name:     {
              b string
              | }      - user name,
              |   phone:    {
              b string
