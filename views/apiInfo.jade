        tr
          td(colspan="2")
            h2 /api/get/orders
            span.disabled-text
              | 
              | disabled
            | 
            button.emit-btn(id="emit-get-order" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b GET
        tr
          td.primary
            | query:
          td.secondary
            | ?login=
