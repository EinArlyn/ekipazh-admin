        li
          a(href="#insert")
            | /api/insert
        li
          a(href="#remove-order")
            | /api/remove-order
        li
          a(href="#register")
            | /api/register
        li.disabled
          a(href="#get-orders")
            | /api/get/orders
          | 
          span.disabled-text
            | disabled
        li
          a(href="#get-locations")
            | /api/get/locations
        li
          a(href="#get-factories-by-country")
            | /api/get/factories-by-country
    #api-content
      table.api-table(id="login" cellspacing="0" cellpadding="2" border="0")
        tr
          td(colspan="2")
            h2 /api/login
            | 
            button.emit-btn(id="emit-login" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b POST
        tr
          td.primary
            | query:
          td.secondary
            | -
        tr
          td.primary
            | body:
          td.secondary
            pre
              | {
              |   login:    {
              b string
              | }      - user phone
              | }
        tr
          td.primary
            | response:
          td.secondary
            pre
              | {
              |   status: 
              b true
              | ,
              |   user: 
              |     {
              |       ......,
              |       ......
              |     }
              | }
      table.api-table(id="signed" cellspacing="0" cellpadding="2" border="0")
        tr
          td(colspan="2")
            h2 /api/signed
            //span.disabled-text
              | 
              | disabled
            | 
            button.emit-btn(id="emit-signed" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b GET
        tr
          td.primary
            | query:
          td.secondary
            | ?login=
            b login
            | &access_token=
            b access_token
            | &date=
            b date
            pre
              |    login:           {
              b string
              | }      - user phone
              |    access_token:    {
              b string
              | }      - user device_code
              |    date:            {
              b timestamp
              | }   - date
        tr
          td.primary
            | body:
          td.secondary
            | -
        tr
          td.primary
            | response:
          td.secondary
            pre
              | {
              |   status: 
              b true
              | 
              | }
      table.api-table(id="sync" cellspacing="0" cellpadding="2" border="0")
        tr
          td(colspan="2")
            h2 /api/sync
            | 
            button.emit-btn(id="emit-sync" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b GET
        tr
          td.primary
            | query:
          td.secondary
            | ?login=
            b login
            | &access_token=
            b access_token
            pre
              |    login:           {
              b string
              | }      - user phone
              |    access_token:    {
              b string
              | }      - user device_code
        tr
          td.primary
            | body:
          td.secondary
            | -
        tr
          td.primary
            | response:
          td.secondary
            pre
              | {
              |   status: 
              b true
              | ,
              |   tables: 
              |     {
              |       additional_colors: 
              |         {
              |           fields:    {
              b array of strings
              | }     - array with fields of current table,
              |           rows:      {
              b array of strings
              | }     - array with values of current table
              |         },
              |       .......,
              |       .......
              |     }
              | }
      table.api-table(id="update" cellspacing="0" cellpadding="2" border="0")
        tr
          td(colspan="2")
            h2 /api/update
            | 
            button.emit-btn(id="emit-update" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b POST
        tr
          td.primary
            | query:
          td.secondary
            | ?login=
            b login
            | &access_token=
            b access_token
            pre
              |    login:           {
              b string
              | }      - user phone
              |    access_token:    {
              b string
              | }      - user device_code
        tr
          td.primary
            | body:
          td.secondary
            pre
              | {
              |   model:    {
              b string
              | }      - table name,
              |   rowId:    {
              b integer
              | }     - row id which you want to change,
              |   field:    {
              b string
              | }      - string, where property name - field name which you want to change with new value
              |                             { <'field_name'> : <'new_value'> }
              | }
        tr
          td.primary
            | response:
          td.secondary
            pre
              | {
              |   status: 
              b true
              | 
              | }
      table.api-table(id="insert" cellspacing="0" cellpadding="2" border="0")
        tr
          td(colspan="2")
            h2 /api/insert
            | 
            button.emit-btn(id="emit-insert" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
            b POST
        tr
          td.primary
            | query:
          td.secondary
            | ?login=
            b login
            | &access_token=
            b access_token
            pre
              |    login:           {
              b string
              | }      - user phone
              |    access_token:    {
              b string
              | }      - user device_code
        tr
          td.primary
            | body:
          td.secondary
            pre
              | {
              |   model:    {
              b string
              | }      - table name,
              |   row:    {
              b string
              | }      - string, where property name - field name which you want to change with new value
              |                             { <'field_name'> : <'new_value'> }
              | }
        tr
          td.primary
            | response:
          td.secondary
            pre
              | {
              |   status: 
              b true
              | ,
              |   id:     {
              b integer
              | }   -  id of new row
              | }
      table.api-table(id="remove-order" cellspacing="0" cellpadding="2" border="0")
        tr
          td(colspan="2")
            h2 /api/remove-order
            | 
            button.emit-btn(id="emit-remove-order" type="button") emit
        tr
          td.primary
            | method:
          td.secondary
