doctype html
html
  link(rel="stylesheet", href="/assets/stylesheets/baseLayout.css")
  include ./includes/head.jade
  body
    .wrapper(data-id=userToken)
      nav
        .nav-panel
          //.nav-logo
            img(src="/assets/images/logo_window.png")
          span#logo-brand
            | Ekipazh Calculator admin panel
          .nav-logout
            span#lang-selector
              a#lang-rus(href="/?lang=ru" class=(lang === 'ru' ? 'selected': ''))
                | Ru
              | &nbsp;&nbsp;

              a#lang-ua(href="/?lang=ua" class=(lang === 'ua' ? 'selected': ''))
                | Ua
              | &nbsp;&nbsp;

              a#lang-ua(href="/?lang=en" class=(lang === 'en' ? 'selected': ''))
                | En
              | &nbsp;&nbsp;

              a#lang-es(href="/?lang=it" class=(lang === 'it' ? 'selected': ''))
                | It
              | &nbsp;&nbsp;&nbsp;
            span#nav-logout-button
              img(src='/assets/images/logout.png', alt="Выход")
              a(class="external-link", href="/logout" id="logout") &nbsp;Exit 
          .nav-search
            input(type="text", name="content", placeholder=" Поиск...", class="search-input")
      .loader-wrapper
        #logo-loader
      main.load-content(style="display: none")
        block content
      footer.load-content(style="display: none")
        #footer-text=i18n.copyright
          sub=i18n.version
      include ./includes/footer.jade
