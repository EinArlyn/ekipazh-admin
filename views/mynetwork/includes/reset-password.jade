.pop-up.popup-reset-password
  form#form-reset-password(method="POST" action="/mynetwork/password" enctype="multipart/form-data" autocomplete="off")
    input(type="hidden" name="user_id" value="")
    .pop-up-close-wrap
      a.pop-up-close(href="#")
    span.pop-up-header
      =i18n.__('Reset password')
    .row
      .col-md-5.text-right
        =i18n.__('Old password')
        | :
      .col-md-7
        input.input-default.width-100(type="password" name="old_password" value="" required autocomplete="off")
    .row
      .col-md-5.text-right
        =i18n.__('New password')
        | :
      .col-md-7
        input.input-default.width-100(type="password" name="new_password" value="" required autocomplete="off")
    .row
      .col-md-5.text-right
        =i18n.__('Repeat new password')
        | :
      .col-md-7
        input.input-default.width-100(type="password" name="new_password_repeat" value="" required autocomplete="off")
    .row
      .col-md-4
      .col-md-4
        input.pop-up-submit-btn.block-center(type="submit" value=i18n.__('Save'))
      .col-md-4
          
